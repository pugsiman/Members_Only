<h1>New post</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'errors' %>
    <%= form_for(@post) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <br>
      <%= f.label :content %>
      <%= f.text_area :body, class: 'form-control' %>
      <br>
      <%= f.submit "Submit", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
